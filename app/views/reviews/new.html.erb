<h1>Rate <%= @restaurant.name %></h1>

<%= form_for([@restaurant, @review]) do |f| %>

<% if @review.errors.any? %>
  <p>
    <h3 class="error">Couldn't save your review. Error(s):</h3>
    <ul>
    <% @review.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </p>
<% end %>


  <p><%= f.label :rating %>
  <%= f.select :rating, (1..5) %></p>

  <p><%= f.label :body %>
  <%= f.text_area :body %></p>

  <%= f.submit %>

<% end %>
<br>
<%= link_to "Back to #{@restaurant.name} Description Page", restaurant_path(params[:restaurant_id])  %> <br><br>
<%= link_to "Back to All Restaurants", restaurants_path  %>
